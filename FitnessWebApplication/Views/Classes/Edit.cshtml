@model ClassVM
@using FitnessWebApplication.Data.Enums
@{
    ViewData["Title"] = "Update a class";
}

<h2 class="text-center">Modifica clasa @Model.Name</h2>
<br />
<div class="row">
    <div class="col-md-8 offset-2">
        <form method="post" asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ClassCategory" class="control-label"></label>
                        <select asp-for="ClassCategory" class="form-control" asp-items="Html.GetEnumSelectList<ClassCategory>()"></select>
                        <span asp-validation-for="ClassCategory" class="text-danger"></span>
                    </div>


                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="TrainerId" class="control-label"></label>
                        <select asp-for="TrainerId" class="form-control" asp-items="ViewBag.Trainers"></select>
                        <span asp-validation-for="TrainerId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PictureUrl" class="control-label"></label>
                        <input asp-for="PictureUrl" class="form-control" />
                        <span asp-validation-for="PictureUrl" class="text-danger"></span>
                    </div>
                    
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>


            <div class="form-group">
                <input type="submit" value="Edit" class="btn btn-primary" />
                <a class="float-right" asp-action="Index">Back to List</a>
            </div>




        </form>
    </div>
</div>



